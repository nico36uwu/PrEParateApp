<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrEParateApp.View.CalendarioView"
             Title="Calendario">
    
    <VerticalStackLayout Padding="20" Spacing="60">

        <Label 
        Text="CALENDARIO"
        FontSize="24"
        FontAttributes="Bold"
        HorizontalOptions="Center" />

        <!-- Aquí irán los elementos de la lista de eventos -->

        <Button 
        Text="PLANIFICAR NUEVO EVENTO"
        Command="{Binding PlanificarNuevoEventoCommand}"
        BackgroundColor="Red"
        TextColor="White"
        FontAttributes="Bold"
        HorizontalOptions="Fill" />

    </VerticalStackLayout>
    
</ContentPage>